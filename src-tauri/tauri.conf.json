{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tahweel",
  "version": "0.1.0",
  "identifier": "com.tahweel.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tahweel",
        "width": 600,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 500,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": []
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**"],
        "deny": []
      }
    },
    "dialog": {
      "all": true
    },
    "shell": {
      "all": false,
      "open": true
    },
    "http": {
      "scope": {
        "allow": [
          { "url": "https://accounts.google.com/**" },
          { "url": "https://oauth2.googleapis.com/**" },
          { "url": "https://www.googleapis.com/**" }
        ]
      }
    }
  }
}
